---
import IconCarta from "@/assets/images/icons/icon-carta.svg";
import { PRODUCTS } from "@/config/database.products";
import { Image } from "astro:assets";
---

<section class="w-full mb-10">
  <div class="flex items-center gap-4 border-b border-borderPlatos w-full pb-5">
    <Image src={IconCarta} alt="Icono de carta" class="w-5" />
    <h2 class="font-semibold text-primary text-lg">
      Conoce nuestros platos congelados
    </h2>
  </div>

  <div
    class="grid mt-10 gap-3 z-10 w-full"
    style="grid-template-columns: repeat(auto-fit, minmax(245px, 1fr));"
  >
    {
      PRODUCTS.map(({ title, description, image, slug, category, alt }) => (
        <article
          class="group flex flex-col rounded-lg p-3 w-full max-w-[280px] bg-white shadow-cheffify-card product-item aspect-[269/525]"
          data-category={category}
        >
          <a
            class="overflow-hidden rounded-lg flex"
            href={`/nuestros-platos/${slug}`}
            aria-label="Link que te lleva al interior del producto"
          >
            <img
              alt={alt}
              src={image}
              class="aspect-square rounded-lg transition duration-500 transform group-hover:scale-110"
            />
          </a>
          <div class="px-2 py-4">
            <h3 class="text-cheffify-gray-dark font-bold text-[16px] md:text-[19px] min-h-[42px] leading-[19px] mb-1">
              {title}
            </h3>
            <p class="text-cheffify-gray-dark text-[12px] md:text-[13px] min-h-[130px] mb-2 font-extralight">
              {description}
            </p>
            <a
              href={`/nuestros-platos/${slug}`}
              class="bg-secondary text-center text-white transition-all duration-500 hover:bg-cheffify-aqua rounded-lg w-full py-2 block font-semibold"
            >
              Más información del plato
            </a>
          </div>
        </article>
      ))
    }
  </div>
</section>
