---
import IconCompany from "@/assets/images/icons/icon-company.svg";
import IconPeople from "@/assets/images/icons/icon-people.svg";
import ImageComeComoCasa from "@/assets/images/img/come-como-en-casa.svg";
import ImageCoverCompany from "@/assets/images/img/image-dinner.webp";
import ImageCoverFamily from "@/assets/images/img/image-family.webp";
// Decorativos
import ImagePoints from "@/assets/images/decoratives/elemento-decorativo-points-green.svg";
import ImageFlowerRight from "@/assets/images/decoratives/elemento-decorativo-flower-3.svg";
import ImageFlowerLeft from "@/assets/images/decoratives/elemento-decorativo-flower.svg";

import Footer from "@/components/Footer.astro";
import HeroBanner from "@/components/HeroBanner.astro";
import InfoHome from "@/components/InfoHome.astro";
import Navbar from "@/components/Navbar.astro";

import Layout from "@/layouts/Layout.astro";

import { Image } from "astro:assets";
---

<Layout
  title="Servicio de alimentación para empresas | Cheﬃfy"
  description="Cheﬃfy ofrece servicios de alimentación para empresas con menús personalizados, frescos y saludables. Mejora la experiencia de tu equipo con opciones de calidad."
>
  <main>
    <Navbar />
    <HeroBanner />
    <section
      class="px-4 lg:px-40 xl:px-72 bg-shadow-item bg-no-repeat bg-contain bg-bottom relative overflow-x-hidden"
    >
      <InfoHome
        icon={IconCompany}
        title="Servicio de almuerzos y colaciones para empresas"
        description="Somos proveedores de Restaurantes, Hoteles y Grandes Empresas con platos artesanales congelados y 100% naturales. Solicita una cotización y lleva la mejor calidad a tu negocio."
        list={[
          "Soluciones personalizadas de comida congelada.",
          "Platos elaborados sin conservantes ni colorantes.",
          "Envíos a todo Chile.",
          "Pedido mínimo mensual de 900.000 CLP.",
        ]}
        cover={ImageCoverCompany}
        altImage="Servicio de almuerzos y colaciones para empresas"
      />
      <InfoHome
        icon={IconPeople}
        title="Comida a domicilio"
        description="Disfruta de nuestra comida casera y saludable de siempre en la comodidad de tu hogar. Elige tu menú favorito con FROZT y llegará directo a tu casa ¡haz tu pedido ahora!"
        list={[
          "Platos caseros congelados, listos para disfrutar.",
          "Ingredientes frescos y sin conservantes.",
          "Variedad de menús para todos los gustos.",
          "Compra a través de nuestro distribuidor oficial.",
        ]}
        cover={ImageCoverFamily}
        isFrozt={true}
        altImage="Comida a domicilio"
      />
      <Image
        src={ImageComeComoCasa}
        alt="Come como en casa"
        class="w-80 mx-auto py-20"
        loading="lazy"
      />

      <!-- INFO: Elementos decorativos -->
      <Image
        src={ImagePoints}
        alt="Elemento decorativo de puntos verdes"
        class="absolute w-24 top-60 left-0 hidden lg:block"
        loading="lazy"
      />
      <Image
        src={ImageFlowerRight}
        alt="Elemento decorativo de flor rosada"
        class="absolute w-40 top-96 -right-8 -z-10"
        loading="lazy"
      />
      <Image
        src={ImageFlowerLeft}
        alt="Elemento decorativo de flor rosada pintada a mano"
        class="absolute w-40 bottom-40 left-0 -z-10"
        loading="lazy"
      />
    </section>
    <Footer />
  </main>
</Layout>
